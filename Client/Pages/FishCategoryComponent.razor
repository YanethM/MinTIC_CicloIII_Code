<div class="jumbotron">
    
    @foreach (var fish in Fishes)
    {
        <div class="card mb-3" style="max-width: 6aa00px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@fish.FishImage" class="img-fluid rounded-start" alt="..." >
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <label><small><b>@fish.FishSpecie</b></small></label>
                        <h6 class="card-text"><small>@fish.FishDescription</small></h6>
                        <p class="card-text"><small class="text-muted">@fish.TypeOfWater</small></p>
                        <footer class="blockquote-footer text-right">
                            <cite>@fish.PublicationDate.ToString("dd/MM/yyyy")</cite>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@code {
    [Parameter] public List<Fish> Fishes { get; set; }
}